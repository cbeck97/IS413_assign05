@{
    ViewData["Title"] = "Home Page";
}

@model BookListViewModel

<br />
<br />
<br />
<br />
<!--Create a book card for each book that is in the Model-->
<div class="container">
    <div class="row row-cols-1">
        @foreach (var x in Model.Books)
        {
            <div class="col-md-12 my-4">
                <div class="card shadow text-center h-100 ">
                    <div class="card-header h-100 bg-dark text-white">
                        <h3 class="card-title">@x.Title</h3>
                    </div>
                    <div class="card-body">
                        <p>Author: @x.AuthorFirstName @x.AuthorLastName</p>
                        <p>Publisher: @x.Publisher</p>
                        <p>ISBN: @x.ISBN</p>
                        <p>Classification: @x.Classification</p>
                        <p>Category: @x.Category</p>
                        <p>Price: @x.Price</p>
                        <p>Page Count: @x.PageCount</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div page-model="@Model.PagingInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-secondary"
     page-class-selected="btn-dark"
     class="btn-group pull-right m-1"></div>

